# AI Engineer Framework 环境配置示例
# 复制此文件为 .env 并填入实际的配置值

# 应用配置
APP_NAME=ai-engineer-framework
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_engineer
DATABASE_ECHO=false

# Redis配置
REDIS_URL=redis://localhost:6379/0

# LLM API密钥
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Pinecone配置
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# 向量数据库配置
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./data/chromadb

# 监控配置
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=8080
OPENTELEMETRY_ENABLED=false
SENTRY_ENABLED=false
SENTRY_DSN=your_sentry_dsn_here

# 安全配置
SECRET_KEY=your_secret_key_here
API_KEY_REQUIRED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# SSL配置（生产环境）
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# 任务队列配置
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# 文件存储配置
STORAGE_TYPE=local
STORAGE_PATH=./data/files

# AWS S3配置（可选）
S3_BUCKET=your_s3_bucket_here
S3_REGION=your_s3_region_here
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# 成本优化配置
DAILY_BUDGET_USD=100.0
MONTHLY_BUDGET_USD=3000.0
BUDGET_ALERT_THRESHOLD=0.8

# 开发配置
AUTO_RELOAD=true
DEBUG_TOOLBAR=true
PROFILING=false

# 缓存配置
CACHE_TYPE=redis
CACHE_TTL=3600

# 多模态处理配置
MAX_IMAGE_SIZE=20971520
MAX_AUDIO_SIZE=26214400
MAX_VIDEO_DURATION=600

# 工具配置
WEB_SEARCH_ENABLED=true
CODE_EXECUTION_ENABLED=false
DOCUMENT_PROCESSING_ENABLED=true

# RAG配置
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50

# Agent配置
ENABLE_AGENT_COLLABORATION=true
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT=300

# 性能配置
MAX_WORKERS=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
KEEPALIVE=2
TIMEOUT=30